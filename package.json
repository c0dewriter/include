{
  "name": "include-nodejs",
  "version": "0.4.1",
  "description": "Import your handwritten libraries without having to worry about where they are!",
  "main": "index.js",
  "bin": {
    "include": "./bin/index.js"
  },
  "scripts": {
    "eslint-tests": "eslint 'bin/**' 'lib/**' 'index.js' 'test/**' --ignore-pattern '*.json'",
    "jest-tests": "jest --silent",
    "test": "npm run eslint-tests && npm run jest-tests"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/c0dewriter/include-nodejs.git"
  },
  "keywords": [
    "import",
    "require",
    "include",
    "loader"
  ],
  "author": "c0dewriter",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/c0dewriter/include-nodejs/issues"
  },
  "homepage": "https://github.com/c0dewriter/include-nodejs#readme",
  "dependencies": {
    "colors": "^1.4.0",
    "fs-extra": "^9.0.0",
    "readline-sync": "^1.4.10",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "jest": "^24.9.0"
  }
}
